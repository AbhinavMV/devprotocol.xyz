---
import Footer from '@components/Global/Footer.astro'

import Navigation from '../components/Global/Navigation.vue'

let { metaTitle } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{metaTitle}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')} />
    <meta
      name="description"
      content="DEV is building a sustainable ecosystem for free assets by tokenization."
    />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://devprotocol.xyz/" />
    <meta property="og:image" content="/assets/og.png" />
    <meta
      property="og:description"
      content="DEV is building a sustainable ecosystem for free assets by tokenization."
    />
  </head>

  <body class="font-body text-gray-900 dark:bg-darkPrimary dark:text-white">
    <Navigation client:visible />
    <main class="grid md:grid gap-y-20 lg:gap-y-40">
      <slot />
    </main>
    <Footer />
  </body>
</html>
